@using Wayfinder.Shared.Data.Entries;
@using Wayfinder.Shared.Libraries;
@using Wayfinder.Client.Components.Application.Views;
@using Wayfinder.Client.Components.Application.Views.Timeline;
@using Wayfinder.Client.Components.Application.Editors.Descriptor;



<div component-name="PlanEditor" class="basic">
	<label>
		Enter plan name (optional):
		<input type="text" />
	</label>

	<TimelineDisplay TimelineDataType=@(PlanOptionEntry)
			Label="Current plan schedule"
            Timeline=@(this.GetPlanTimeline())>
        @* <AddedHeadButtonsPre>
        </AddedHeadButtonsPre>
        <Footer>
        </Footer> *@
	</TimelineDisplay>		@* <- Edit plan options with popup PlanOptionEditor *@

	<PlanOptionTreeEditor Goal=@(this.GetCurrentPlan().Goal)
			Plan=@this.GetCurrentPlan />	@* <- Edit plan options with popup PlanOptionEditor *@

	@if( !this.SubmitOnEditOnly ) {
		<button @onclick=@(async e => await this.Submit_UI_Async())>Submit</button>
	}
</div>
